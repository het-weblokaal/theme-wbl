{
	"name": "wbl-theme/simple-image",
	"title": "Simple Image",
	"icon": "id",
	"category": "layout",
	"keywords": [ "Afbeelding" ],
	"description": "A simple image block",

	"attributes": {
		"src": {
			"type"      : "string",
			"source"    : "attribute",
			"selector"  : ".wbl-simple-image img",
			"attribute" : "src",
			"default"   : ""
		},
		"size": {
			"type"      : "string"
		},
		"id": {
			"type": "number"
		}
	},

	"supports": {
		"align"              : false,
		"alignWide"          : false,
		"anchor"             : false,
		"className"			 : false,
		"customClassName"    : false,
		"defaultStylePicker" : false,
		"html"               : false,
		"lightBlockWrapper"  : false
	}
}

