/**
 * For references see:
 * 
 * @link https://developer.wordpress.org/block-editor/how-to-guides/themes/theme-json/
 * @link https://github.com/WordPress/theme-experiments/blob/master/emptytheme/theme.json
 * @link https://github.com/WordPress/theme-experiments/blob/master/tt1-blocks/theme.json
 * @link https://github.com/aristath/q/blob/master/theme.json
 * 
 */
{
    "version": 1,
    "settings": {

    	"color": {
            "palette": [
	            {
	                "name": "Cornsilk",
	                "slug": "cornsilk",
	                "color": "#FFF7D6"
	            },
	            {
	                "name": "Black",
	                "slug": "black",
	                "color": "#000000"
	            }
            ],
            "custom": false,

            "gradients": [],
            "customGradient": false,

            "duotone": [],
            "customDuotone": false,

            "link": false
        },

        "layout": false,

        "spacing": false,

        "typography": {
            "dropCap": false,
        	"fontSizes": [],
			"fontFamilies": [],
			"fontStyles": [
				{ "name": "Regular", "slug": "normal", "value": "normal" },
				{ "name": "Italic",  "slug": "italic", "value": "italic" }
			],
			"fontWeights": [
				{ "slug": "400", "value": "400", "name": "Regular" },
				{ "slug": "700", "value": "700", "name": "Bold" },
			],
			"textTransforms": [],
			"textDecorations": [
				{ "name": "Underline",     "slug": "underline",    "value": "underline" },
				{ "name": "Strikethrough", "slug": "strikethrough", "value": "line-through" }
			],
            "customFontSize": false,
            "customLineHeight": false
        },

        "custom": {

        	"line-height": {
				"body": 1.7,
				"heading": 1.3,
				"page-title": 1.1
			},

			"space": {
				"1": "0.25rem",
				"2": "0.5rem",
				"3": "0.75rem",
				"4": "1rem",
				"5": "1.25rem",
				"6": "1.5rem",
				"8": "2rem",
				"10": "2.5rem",
				"12": "3rem",
				"16": "4rem",
				"20": "5rem"
			},

			"site": {
				"width": "88vw",
				"padding": "6vw"
			},

			"grid": {
				"column": "88vw",
				"gutter": "0vw",
				"column-span": {
					"1":  "var(--wp--custom--grid--column)",
					"2":  "calc(var(--wp--custom--grid--column) * 2  + var(--wp--custom--grid--gutter) * 1)",
					"3":  "calc(var(--wp--custom--grid--column) * 3  + var(--wp--custom--grid--gutter) * 2)",
					"4":  "calc(var(--wp--custom--grid--column) * 4  + var(--wp--custom--grid--gutter) * 3)",
					"5":  "calc(var(--wp--custom--grid--column) * 5  + var(--wp--custom--grid--gutter) * 4)",
					"6":  "calc(var(--wp--custom--grid--column) * 6  + var(--wp--custom--grid--gutter) * 5)",
					"7":  "calc(var(--wp--custom--grid--column) * 7  + var(--wp--custom--grid--gutter) * 6)",
					"8":  "calc(var(--wp--custom--grid--column) * 8  + var(--wp--custom--grid--gutter) * 7)",
					"9":  "calc(var(--wp--custom--grid--column) * 9  + var(--wp--custom--grid--gutter) * 8)",
					"10": "calc(var(--wp--custom--grid--column) * 10 + var(--wp--custom--grid--gutter) * 9)",
					"11": "calc(var(--wp--custom--grid--column) * 11 + var(--wp--custom--grid--gutter) * 10)",
					"12": "calc(var(--wp--custom--grid--column) * 12 + var(--wp--custom--grid--gutter) * 11)"
				}
			}

        },

        "blocks": {

        }
    },
    "styles": {
    	"color": {
    		"background": "var(--wp--preset--color--cornsilk)",
            "text": "var(--wp--preset--color--black)"
        },
        "typography": {
			"fontSize": "var(--wp--preset--font-size--normal)",
			"lineHeight": "var(--wp--custom--line-height--body)",
			"fontFamily": "var(--wp--preset--font-family--system)"
		},
		"elements": {

			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--gigantic)",
					"lineHeight": "var(--wp--custom--line-height--page-title)",
					"fontWeight": "var(--wp--custom--font-weight--normal)"
				}
			},

			"link": {
				"color": { "text": "currentColor" }
			}
		},
        "blocks": {}
    }
}